{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-std=c++14",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",                  // 열려있는 파일만 컴파일 하겠다.
        //"${fileDirname}\\**.cpp",  // 해당 디렉토리 내 모든 파일을 컴파일 하겠다.
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
